<%- include("receptionDashbord.ejs") %>
<div class="container mt-5">
  <h2 class="mb-4">All Nurses</h2>
  <form class="form-inline mb-3" method="GET" action="/viewnurses">
    <input type="text" name="search" class="form-control mr-2" placeholder="Search by email..." value="<%= typeof search !== 'undefined' ? search : '' %>">
    <button class="btn btn-primary">Search</button>
  </form>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Email</th>
        <th>Department</th>
        <th>Shift</th>
        <th>Qualification</th>
        <th>Experience</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% nurse.forEach(nurse => { %>
        <tr>
          <td><%= nurse.email %></td>
          <td><%= nurse.department %></td>
          <td><%= nurse.shift %></td>
          <td><%= nurse.qualification %></td>
          <td><%= nurse.experience %> yrs</td>
          <td><%= nurse.status ? 'Active' : 'Inactive' %></td>
          <td>
            <a href="/editnurse/<%= nurse.nurseId %>" class="btn btn-sm btn-info">Edit</a>
            <a href="/deletenurse/<%= nurse.nurseId %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this nurse?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
