  <style>
     body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    header {
      background-color: #0d6efd;
      color: white;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 20px;
      margin: 0;
      padding: 0;
    }

    nav ul li a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }

    .login-btn {
      background: white;
      color: #0d6efd;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    .intro {
      padding: 40px 20px;
      background: #f8f9fa;
      text-align: center;
    }

    .slider {
      width: 100%;
      overflow: hidden;
      position: relative;
    }

    .slides {
      display: flex;
      width: 300%;
     
    }

    .slides img {
      width: 34%;
      height: 490px;
      object-fit: cover;
    }

    @keyframes slide {
      0% { margin-left: 0; }
      33% { margin-left: -100%; }
      66% { margin-left: -200%; }
      100% { margin-left: 0; }
    }

    .section {
      padding: 40px 20px;
    }

    .services, .testimonials {
      background: #fff;
    }

    .footer {
      background: #0d6efd;
      color: white;
      text-align: center;
      padding: 20px;
    }

    h2 {
      color: #0d6efd;
    }

    .section-content {
      max-width: 900px;
      margin: auto;
      text-align: center;
    }
 .login-btn {
  background: white;
  color: #0d6efd;
  border: 2px solid #0d6efd;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.login-btn:hover {
  background: #0d6efd;
  color: white;
  transform: scale(1.05);
}
/* Base styles already added above this line */

/* Mobile Devices (up to 768px) */
@media (max-width: 768px) {
  header {
    flex-direction: column;
    align-items: flex-start;
  }

  nav ul {
    flex-direction: column;
    gap: 10px;
    padding-left: 0;
    margin-top: 10px;
  }

  .login-btn {
    margin-top: 10px;
    width: 100%;
  }

  .intro, .section-content {
    padding: 20px;
    text-align: left;
  }

  .slides img {
    height: 250px;
  }

  .section-content h2 {
    font-size: 22px;
  }

  .section-content p {
    font-size: 16px;
  }
}

/* Tablet Devices (769px to 1024px) */
@media (min-width: 769px) and (max-width: 1024px) {
  .slides img {
    height: 300px;
  }

  .section-content {
    padding: 30px;
  }

  .section-content h2 {
    font-size: 26px;
  }

  .section-content p {
    font-size: 17px;
  }
}


.logo-title {
  display: flex;
  align-items: center;
  gap: 15px;
}

.logo {
  height: 50px;
  width: 50px;
  object-fit: contain;
}


  </style>
