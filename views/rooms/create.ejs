<!DOCTYPE html>
<html>
<head>
  <title>Add Room</title>
</head>
<body>
  <h2 style="text-align:center;">Add New Room</h2>
 <form action="/rooms" method="POST" style="width: 300px; margin: auto;">
  <label>Type:</label><br>
  <select name="type" required>
    <% roomTypes.forEach(type => { %>
      <option value="<%= type %>"><%= type %></option>
    <% }) %>
  </select><br><br>

  <label>Charges/Day:</label><br>
  <input type="number" name="charges_per_day" required><br><br>

  <label>Status:</label><br>
  <select name="status" required>
    <% roomStatuses.forEach(status => { %>
      <option value="<%= status %>"><%= status %></option>
    <% }) %>
  </select><br><br>

  <button type="submit">Create</button>
</form>
  <div style="text-align:center; margin-top:20px;">
    <a href="/rooms">Back to List</a>
  </div>
</body>
</html>
